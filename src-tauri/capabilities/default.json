{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Archivist default permissions - scoped for security",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "notification:default",
    "log:default",

    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-stat",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$DOWNLOAD/**",
        "$DOCUMENT/**",
        "$DATA/**",
        "$LOCALDATA/**",
        "$APPDATA/**",
        "$APPCONFIG/**",
        "$APPLOCALDATA/**"
      ]
    },

    "shell:allow-open",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "archivist",
          "sidecar": true,
          "args": true
        }
      ]
    },

    "process:allow-exit",
    "process:allow-restart"
  ]
}
